<% form_for @state do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.label :status %><br />
	<%= f.select "status", ['BEING INVESTIGATED', 'ONGOING', 'RESOLVED'] %>
  </p>
  <p><%= f.submit %></p>
<% end %>
